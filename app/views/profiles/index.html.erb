<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Height in inches</th>
      <th>Gender</th>
      <th>Description</th>
      <th>Hobbies</th>
      <th>Books</th>
      <th>Shows</th>
      <th>Fitness level</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.age %></td>
        <td><%= profile.height_in_inches %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.description %></td>
        <td><%= profile.hobbies %></td>
        <td><%= profile.books %></td>
        <td><%= profile.shows %></td>
        <td><%= profile.fitness_level %></td>
        <td><%= profile.occupation %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

